<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="AutoMail.lua"/>

    <Frame name="AutoMailFrame" hidden="true" parent="MailFrame" mixin="AutoMailFrameMixin">
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="MailFrameInset" x="4" y="-4"/>
            <Anchor point="BOTTOMRIGHT" relativeTo="MailFrameInset" x="-4" y="4"/>
        </Anchors>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEvent method="OnEvent"/>
            <OnShow>
                self:UpdateItemList(true)
            </OnShow>
        </Scripts>

        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="RecipientText" inherits="GameFontNormalLarge">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-20"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <ScrollFrame parentKey="ScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-50"/>
                    <Anchor point="BOTTOMRIGHT" x="-30" y="50"/>
                </Anchors>
                <ScrollChild>
                    <Frame parentKey="Content">
                        <Size x="280" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>

            <Button parentKey="SendButton" inherits="UIPanelButtonTemplate" text="Send All">
                <Size x="120" y="30"/>
                <Anchors>
                    <Anchor point="BOTTOM" x="0" y="10"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():SendNextBatch()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>

    <Button name="AutoMailTab" parent="MailFrame" inherits="FriendsFrameTabTemplate" id="3" text="Auto Mail">
        <Anchors>
            <Anchor point="LEFT" relativeTo="MailFrameTab2" relativePoint="RIGHT" x="-16" y="0"/>
        </Anchors>
        <Scripts>
            <OnLoad>
                PanelTemplates_SetNumTabs(MailFrame, 3)
            </OnLoad>
            <OnClick>
                MailFrameTab_OnClick(self, 3);
            </OnClick>
        </Scripts>
    </Button>
</Ui>